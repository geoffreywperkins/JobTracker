<!DOCTYPE html>
<html>
  <head>
    <title>Job Tracker App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="welcome-background">
    <header class="header-bar align-middle">
      <p><%= link_to "App Name", welcome_index_path, class: "dark-gray app-name" %></p>
      <p class="header-text align-middle"><%= link_to('Edit Profile', edit_user_registration_path) %><%= link_to('Logout', destroy_user_session_path, method: :delete) %></p>
    </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    <%= yield %>
  </body>
</html>
