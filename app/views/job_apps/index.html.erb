
<div class="index-page-box">
	<%= link_to "Add Application", new_job_app_path, class: "add-app-button" %>
	<div class="index-table-header">
		<h2>
			Job Applications
		</h2>
		<div class="color-bar">
		</div>
	</div>
	<div class="container">
	<div class="scrollable row">
		<% @job_apps.each do |job_app| %>
			<%= link_to job_app_path(job_app), class: "box" do %>
				<%= job_app.company %>
			<% end %>
		<% end %>
	</div>
	</div>
</div>
