<!DOCTYPE html>
<html>
  <head>
    <title>WEOFISDOFIN</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class= "devise-background">
    <header class="header-bar align-middle">
      <p><%= link_to "App Name", welcome_index_path, class: "dark-gray app-name" %></p>

      <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      <% elsif devise_mapping.registerable? && controller_name != 'registrations' %>
        <p class="header-text align-middle">Don't have an account? <%= link_to "Get started", new_user_registration_path %></p>
      <% else %>
        <p class="header-text align-middle">Already have an account? <%= link_to "Sign in", new_user_session_path %></p>
      <% end %>
    </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>
  </body>
</html>